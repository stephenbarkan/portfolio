{% extends "partials/_window.twig" %}

{% block content %}
<div class="window-content-wrapper" tabindex="0">

    {% for post in posts %}
    <a href="{{post.link}}" data-title="{{post.title}}"
       style="--brand-color: {{post.brand_color}}; --coming-soon-text: '{{post.coming_soon_text | default("coming soon")}}'"
       {% if post.coming_soon %}
       class="work-preview-wrapper coming-soon" tabindex="-1"
       {% else %}
       class="work-preview-wrapper"
       {% endif %}
       data-swup-transition="next-project">

        <div class="work-preview-text">
            <h3>{{post.title}}</h3>
            <ul class="single-services">
                {% for item in post.get_field('services_provided') %}
                <li>{{ item.service }}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="work-preview-arrow">
            <svg width="10" height="17" viewBox="0 0 10 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 16L8.5 8.5L1 1" stroke="black" stroke-width="2" />
            </svg>
        </div>
    </a>
    {% endfor %}

</div>

{% endblock content %}